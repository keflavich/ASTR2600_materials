% Change chapter head 
\def\@makechapterhead#1{ \vspace*{5pt} {\parindent 0pt \raggedright
 \ifnum \c@secnumdepth >\m@ne \LARGE \bf \hfill \@chapapp{} \thechapter
 \vskip 5 pt\hrule \par
 \vskip 20pt \fi \LARGE \bf\begin{center} #1\end{center}\par
 \nobreak \vskip 20pt } }
\def\@makeschapterhead#1{ \vspace*{5pt} {\parindent 0pt \raggedright
 \Huge \bf #1\par
 \nobreak \vskip 20pt } }

% Remove the colon from the figure caption
\long\def\@makecaption#1#2{
\vskip 10pt
\setbox\@tempboxa\hbox{{\footnotesize\bf #1} {\footnotesize #2}}
\ifdim \wd\@tempboxa >\hsize \unhbox\@tempboxa\par \else \hbox
to\hsize{\hfil\box\@tempboxa\hfil}
\fi}
